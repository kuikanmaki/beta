<% provide(:title, @title) %>
<div class="container">
  <div class="row">
    <aside class="span4">
      <section>
        <%= link_to (image_tag @user.avatar.url(:thumb)), @user %><br><br>
        <h1>
          <%= @user.name %>
        </h1>
        <br>
        <span><b>Notes:</b> <%= @user.notes.count %></span>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="span8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>  